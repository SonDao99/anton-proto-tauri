{
  "name": "anton-proto-tauri",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:python": "cd src-python && .venv\\Scripts\\python.exe app\\main.py",
    "dev:tauri": "tauri dev",
    "dev:all": "concurrently \"npm run dev:python\" \"npm run dev:tauri\" --names \"PYTHON,TAURI\" --prefix-colors \"blue,magenta\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "build:sidecar": "cd src-python && .\\.venv\\Scripts\\pyinstaller.exe --onefile app/main.py && copy dist\\main.exe ..\\src-tauri\\binaries\\main.exe && cd ..\\src-tauri && node ../scripts/rename-sidecar.js"
  },
  "dependencies": {
    "@platejs/basic-nodes": "^49.0.0",
    "@platejs/dnd": "^50.3.1",
    "@platejs/indent": "^49.0.0",
    "@platejs/list": "^50.2.0",
    "@platejs/media": "^49.0.0",
    "@platejs/selection": "^50.3.4",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toolbar": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.14",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "execa": "^9.6.0",
    "lucide-react": "^0.544.0",
    "platejs": "^49.2.21",
    "react": "^19.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  }
}
